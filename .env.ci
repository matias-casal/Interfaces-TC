# CI/CD Environment Variables
# PostgreSQL Configuration
POSTGRES_USER=messaging_user
POSTGRES_PASSWORD=messaging_password_ci
POSTGRES_DB=messaging_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Database URLs for services
DATABASE_URL=postgresql://messaging_user:messaging_password_ci@postgres:5432/messaging_db

# JWT Configuration
JWT_SECRET=ci_test_jwt_secret_key_for_testing_only
JWT_REFRESH_SECRET=ci_test_jwt_refresh_secret_key_for_testing_only

# Service URLs (internal Docker network)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
MESSAGING_SERVICE_URL=http://messaging-service:3003
REALTIME_SERVICE_URL=http://real-time-service:3004

# Internal Service Authentication
INTERNAL_SERVICE_TOKEN=ci_internal_service_token_for_testing_only

# Node Environment
NODE_ENV=test